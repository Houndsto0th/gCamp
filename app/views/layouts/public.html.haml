!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title gCamp
    = stylesheet_link_tag 'application'
    = csrf_meta_tags
    = javascript_include_tag "application"

  -if current_page?("/")
    %body.homepage

  %body{style: "margin-top: 75px"}
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path} gCamp
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Sign Up", signup_path
          %li= link_to "Sign In", signin_path
          / /.navbar-collapse`
    .container
      - unless notice.nil?
        .alert.alert-success.text-center= notice
      = yield

  .container
    %footer{style: "padding-bottom:25px;"}
      %hr.style-one
      .p
        = link_to_unless_current("About", about_path)
        |
        = link_to_unless_current("Terms", terms_path)
        |
        = link_to_unless_current("Faq", faq_path)
        .pull-right
          = link_to "https://www.linkedin.com/profile/view?id=250805495&trk=nav_responsive_tab_profile_pic" do
            =image_tag("linkedin.png", width: "20")
          |
          = link_to "https://twitter.com/Houndsto0th" do
            =image_tag("twitter.png", width: "20")
          |
          = link_to "https://github.com/Houndsto0th" do
            =image_tag("github.png", width: "20")
