!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %link{:href => "../../favicon.ico", :rel => "icon"}/
    %title gCamp
    = stylesheet_link_tag 'application'
    = csrf_meta_tags
    = javascript_include_tag "application"

  -if current_page?("/")
    %body.homepage

  %body{style: "margin-top: 75px"}
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path} gCamp
          / /.navbar-collapse`
    .container
      - unless notice.nil?
        .alert.alert-success= notice
    = yield

  .container
    %footer{style: "padding-bottom:25px;"}
      %hr.style-one
      .p
        = link_to_unless_current("about", about_path)
        |
        = link_to_unless_current("terms", terms_path)
        |
        = link_to_unless_current("faq", faq_path)
        |
        = link_to_unless_current("tasks", tasks_path)
