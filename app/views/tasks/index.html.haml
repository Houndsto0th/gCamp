.container
  %h1 Listing tasks

  %table
    %tr
      %th Description
      %th
      %th
      %th

    - @tasks.each do |task|
      %tr
        %td= task.description
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Task', new_task_path

  %footer{style: "padding-bottom:25px;"}
    %hr.style-one
    %p
      = link_to_unless_current("About", about_path)
      |
      = link_to_unless_current("Terms", terms_path)
      |
      = link_to_unless_current("FAQ", faq_path)
      |
      = link_to_unless_current("Tasks", tasks_path)
