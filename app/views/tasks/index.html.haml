.container
  %h1 Listing tasks

  %table.table
    %tr
      %th Description
      %th
      %th
      %th

    - @tasks.each do |task|
      %tr
        %td= task.description

        %td= link_to 'Show', task, class: "btn btn-success active pull-right"

        %td= link_to 'Edit', edit_task_path(task), class: "btn btn-info active pull-right"

        %td= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-warning pull-right active"

  %br

  = link_to 'New Task', new_task_path

  %footer{style: "padding-bottom:25px;"}
    %hr.style-one
    %p
      = link_to_unless_current("About", about_path)
      |
      = link_to_unless_current("Terms", terms_path)
      |
      = link_to_unless_current("FAQ", faq_path)
      |
      = link_to_unless_current("Tasks", tasks_path)
