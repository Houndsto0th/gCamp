= form_for([@project, @task], html:{class: "form-horizontal"}) do |f|
  =render 'shared/errors', object: @task

  .form-group
    = f.label :description, class: "col-sm-1 control-label"
    .col-sm-6
      = f.text_field :description, class: "form-control"

  .form-group
    = f.label :due_date, class: "col-sm-1 control-label"
    .col-sm-2
      = f.date_field :due_date, class: "form-control"

  - if @task.id
    .form-group
      .col-sm-offset-1.col-sm-10
        =f.check_box :complete
        =f.label :complete


  .actions.form-group
    .col-sm-offset-1.col-sm-10
      = f.submit class:"btn btn-primary"
