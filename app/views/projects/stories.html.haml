.page-header
  .h1
    -@tracker_projects.each do |tproject|

      -if tproject.id.to_s == params[:tracker_id]
        ="Stories for #{tproject.name}"
-# = paginate @tracker_stories
%table.table.table-bordered.table-striped
  %tr
    %th.h5
      Story
    %th.h5
      Estimate
    %th.h5
      Labels
    %th.h5
      Current State
  -@tracker_stories.each do |story|
    %tr
      %td
        =story[:name]
      %td
        =story[:estimate]
      %td
        -@labels = []
        -story[:labels].each do |label|
          -@labels << label[:name]
        =@labels.join(',')

      %td
        =story[:current_state]
-# = paginate @tracker_stories
