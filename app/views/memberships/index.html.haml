.container
  .h1
    #{@project.proj_name}: Manage Members
  =render 'partialshared/errors', collection: @membership
  =render 'form'

.container
  %table.table
    - @project.users.each do |user|
      - user.memberships.each do |member|
        =form_for [@project, member] do |f|

          %tr
            %td= link_to user.full_name, user_path(user)
            %td= f.select :role, ["Member", "Owner"], {}, class: "dropdown-toggle form-control"
            %td= f.submit class: "btn btn-primary"
            %td= link_to "", project_membership_path(@project, member), method: :delete, :data => { :confirm => 'Are you sure?' }, class: "glyphicon glyphicon-remove"
