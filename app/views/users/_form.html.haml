= form_for(@user, html:{class: "form-horizontal"}) do |f|
  .form-group
    .col-sm-4.col-sm-offset-2=render 'shared/errors', object: @user

  .form-group
    =f.label :first_name, class: "col-sm-2 control-label"
    .col-sm-3
      =f.text_field :first_name, class: "form-control"

  .form-group
    =f.label :last_name, class: "col-sm-2 control-label"
    .col-sm-3
      =f.text_field :last_name, class: "form-control"

  .form-group
    =f.label :email, class: "col-sm-2 control-label"
    .col-sm-3
      =f.text_field :email, class: "form-control"

  -if !@user.id
    .form-group
      =f.label :password, class: "col-sm-2 control-label"
      .col-sm-3
        =f.password_field :password, class: "col-sm-2 form-control"
    .form-group
      =f.label :password_confirmation, class: "col-sm-2 control-label"
      .col-sm-3
        =f.password_field :password_confirmation, class: "col-sm-2 form-control"

  .form-group
    =f.label :pivot_token, class: "col-sm-2 control-label"
    .col-sm-3
      =f.text_field :pivot_token, class: "form-control"

  -if current_user.admin
    .form-group
      .col-sm-2.col-sm-offset-2
        =f.check_box :admin
        =f.label :admin, class: "control-label"


  .actions.form-group
    .col-sm-offset-2.col-sm-10
      =f.submit class: "btn btn-primary"
